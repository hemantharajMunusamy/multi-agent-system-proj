MPICXX=${HOME}/sfw/MPICH/bin/mpicxx

REPASTVERSION=2.2.0
REPASTLIBVERSION=2.2
BOOST_VERSION=1_61_0

BOOST_INCLUDE=-isystem $(HOME)/sfw/boost-$(BOOST_VERSION)/include
BOOST_LIB_DIR=-L$(HOME)/sfw/boost-$(BOOST_VERSION)/lib
BOOST_LIBS=-lboost_mpi-mt -lboost_serialization-mt -lboost_filesystem-mt -lboost_system-mt

REPAST_HPC_INCLUDE=-isystem $(HOME)/sfw/repast_hpc-$(REPASTVERSION)/include
REPAST_HPC_LIB_DIR=-L$(HOME)/sfw/repast_hpc-$(REPASTVERSION)/lib
REPAST_HPC_LIB=-lrepast_hpc-$(REPASTLIBVERSION) -lrelogo-$(REPASTLIBVERSION)

LDFLAGS=-Wl,--disable-new-dtags -Wl,-rpath -Wl,$(HOME)/sfw/boost-$(BOOST_VERSION)/lib -Wl,-rpath -Wl,$(HOME)/sfw/repast_hpc-$(REPASTVERSION)/lib